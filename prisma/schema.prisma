generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mysql"
    url = env("DATABASE_URL")
}

enum Role {
    ADMIN
    MEMBER
}

model User {
    id String @id @default(uuid())
    name String
    phone String
    email String @unique
    cpf String?
    password_hash String
    role Role @default(MEMBER)
    address_line1 String
    address_line2 String
    city String
    state String
    country String
    created_at DateTime @default(now())
    updated_at DateTime @default(now())

    gym  Gym @relation(fields: [gym_id], references: [id])
    gym_id String

    @@map("users")
}

model Instructor {
    id String @id @default(uuid())
    name String
    phone String
    email String @unique
    cpf String?
    password_hash String
    role Role @default(MEMBER)
    address_line1 String
    address_line2 String
    city String
    state String
    country String
    created_at DateTime @default(now())
    updated_at DateTime @default(now())

    gym  Gym @relation(fields: [gym_id], references: [id])
    gym_id String

    @@map("instructors")
}

model Gym {
    id String @id @default(uuid())
    title String
    description String?
    cnpj String?
    phone String
    email String @unique
    password_hash String
    address_line1 String
    address_line2 String
    city String
    state String
    country String
    created_at DateTime @default(now())
    updated_at DateTime @default(now())

    instructors Instructor[]
    users User[]

    @@map("gyms")
}

